<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <%= image_tag @product.image.url, class: 'main-img' %>
    <div>
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <div class="quantity">
        <span><%= @product.quantity %> in stock at </span>
        <span><%= humanized_money_with_symbol @product.price %></span>
      </div>
      <div class="price">
        <% if @product.quantity < 1 %>
          <p class=soldout>Sold Out</p>
        <% else %>
          <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn', method: :post do %>
            <%= fa_icon "shopping-cart", text: 'Add' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= form_for product_reviews_path(@product, @review) do |form| %>
      

      <div class="form-group">
        <%= form.label :Write_a_review! %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :rating %>
        <%= form.select :rating, [5, 4, 3, 2, 1], class: 'form-control' %>
      </div>

      <%= form.submit 'Post Review', class: 'btn btn-primary' %>
    <% end %>
    <div class="reviews">
      <% @product.reviews.each do |review| %>
        <%= render 'review', description: review.description, rating: review.rating, posted_by: review.user.first_name %>
      <% end %>
    </div>
  </article>

</section>
